
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="d-flex justify-content-between">
        <div>
            <h2 class="text-primary">Lista de Puestos</h2>
        </div>
        <div>
            <a class="btn btn-outline-primary" asp-action="Upsert">
                <i class="bi bi-plus-square p-1"></i>Crear nueva Puesto
            </a>
        </div>
    </div>

    <div class="p-4 border rounded bg-light">
        <table id="tblDatos" class="table table-responsive table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Tipo</th>
                    <th>Salario</th>
                    <th>Horario</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section scripts{
    <script src="~/js/puesto.js"></script>
}